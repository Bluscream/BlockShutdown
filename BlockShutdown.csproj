<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AssemblyTitle>BlockShutdown</AssemblyTitle>
    <AssemblyDescription>A C# application to block system shutdown/logoff events</AssemblyDescription>
    <ApplicationIcon>BlockShutdown.ico</ApplicationIcon>
    <Version>1.0.0.0</Version>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <None Include="BlockShutdown.ico" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>